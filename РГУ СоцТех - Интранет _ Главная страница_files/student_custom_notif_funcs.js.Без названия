function customPortfolioAccrualNotifications(data) {

    var notif_txt = '';

    switch (data.action) {
        case 'add':
            notif_txt = 'добавил(а) достижение "' + (data.title ? data.title : 'Без названия') + '"';
            break;
        case 'edit':
            notif_txt = 'обновил(а) достижение "' + (data.title ? data.title : 'Без названия') + '"';
            break;
        default:
            notif_txt = 'удалил(а) достижение "' + (data.title ? data.title : 'Без названия') + '"';
            break;
    }

    if (data.sender_id) {

        createNotificationToast(data, notif_txt, 10000, true);

        $('#events_history_counter').fadeIn(300).text(function() {
            return parseInt($(this).text()) + 1;
        });

        if (typeof events_history_offset_delta !== 'undefined') {
            events_history_offset_delta++;
        }

    }

    if (typeof studentPlanLoadAccrualTotal === 'function') studentPlanLoadAccrualTotal();

    if (typeof studentPlanLoadJournalResults === 'function' && data.action != 'add') studentPlanLoadJournalResults(0);

}